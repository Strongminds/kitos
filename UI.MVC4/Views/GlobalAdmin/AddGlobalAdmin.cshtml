@{
    ViewBag.Title = "Opret global administrator";
}

@section submenu {
    @Html.Partial("_AdminSubmenu")
}

<div class="col-md-7">

    <h2>Opret global administrator</h2>
    <p>
        Opret en ny global administrator.
    </p>
    <form class="form-horizontal" role="form" id="add-admin">
        <div class="form-group">
            <label for="name" class="col-md-3 control-label">
                Global admin navn
            </label>
            <div class="col-md-8">
                <input type="text" id="name" class="form-control" required minlength="2"/>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-md-3 control-label">
                Global admin email-addresse
            </label>
            <div class="col-md-8">
                <input type="email" id="email" name="email" class="form-control" required/>
                <p class="help-block">
                    Vedkommende vil blive oprettet i systemet og få tilsendt et link til opsætning af password.
                </p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-3">
                <input class="btn btn-primary" type="submit" value="Opret global admin" />
            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            $("#add-admin").simpleAjax({
                url: "/api/globaladmin",
                getData: function (form) {
                    return {
                        "Name": $("#name").val(),
                        "Email": $("#email").val()
                    };
                }
            });
        });
    </script>
}