@{
    ViewBag.Title = "Opret kommune";
}

<div class="col-md-7">

    <h2>Opret kommune</h2>
    <p>
        Opret en ny kommune i systemet.
    </p>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="add-municipality-name" class="col-md-3 control-label">
                Kommunens navn
            </label>
            <div class="col-md-8">
                <input type="text" id="add-municipality-name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-3">
                <input id="add-municipality" class="btn btn-primary" type="button" value="Opret kommune" />
            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#add-municipality").click(function () {
                var name = $("#add-municipality-name").val();
                $.ajax({
                    type: "POST",
                    url: "/api/municipality",
                    data: {
                        "Name": name
                    }
                }).fail(function (result) {
                    show_message("Kunne ikke oprette kommunen " + name);
                }).done(function (result) {
                    var municipality = result;

                    show_message("Kommunen " + result.Name + " er oprettet i systemet med ID " + result.Id);
                });
            });
        });
    </script>
}
