@{
    ViewBag.Title = "Opret kommune";
}

<div class="col-md-7">

    <h2>Opret kommune</h2>
    <p>
        Opret en ny kommune i systemet.
    </p>
    <form class="form-horizontal" role="form" id="add-municipality">
        <div class="form-group">
            <label for="name" class="col-md-3 control-label">
                Kommunens navn
            </label>
            <div class="col-md-8">
                <input type="text" id="name" class="form-control" required minlength="3"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-3">
                <input class="btn btn-primary" type="submit" value="Opret kommune" />
            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            
            $("#add-municipality").simpleAjax({
                url: "/api/municipality",
                map: {
                    "Name": "#name"
                }
            });
            
