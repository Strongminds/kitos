@{
    ViewBag.Title = "Opret kommune";
}

<h2>Opret kommune</h2>
<p>
    Opret en ny kommune med tilhørende lokal administrator. 
</p>
<div class="col-md-7">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="municipalty-name" class="col-md-3 control-label">
                Kommunens navn
            </label>
            <div class="col-md-8">
                <input type="text" id="municipality-name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="municipality-name" class="col-md-3 control-label">
                Lokal admin email-addresse
            </label>
            <div class="col-md-8">
                <input type="email" id="local-admin" class="form-control"/>
            <p class="help-block">
                Vedkommende vil blive oprettet i systemet og få tilsendt et link til opsætning af password.
            </p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-3">
                <input id="add-municipality" class="btn btn-primary" type="button" value="Opret kommune"/>
            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#add-municipality").click(function() {
                var municipality = {
                    "name": $("#municipality-name").val()
                };
                console.log(municipality);
                $.post("/api/municipality", municipality, function(result) {
                    console.log(result);
                });
            });
        });
    </script>
}
