@{
    ViewBag.Title = "Opret global administrator";
}

<div class="col-md-7">

    <h2>Opret global administrator</h2>
    <p>
        Opret en ny global administrator.
    </p>
    <form class="form-horizontal" role="form" id="add-admin">
        <div class="form-group">
            <label for="global-admin-name" class="col-md-3 control-label">
                Global admin navn
            </label>
            <div class="col-md-8">
                <input type="text" id="global-admin-name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="global-admin-email" class="col-md-3 control-label">
                Global admin email-addresse
            </label>
            <div class="col-md-8">
                <input type="email" id="global-admin-email" class="form-control" />
                <p class="help-block">
                    Vedkommende vil blive oprettet i systemet og få tilsendt et link til opsætning af password.
                </p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-3">
                <input class="btn btn-primary" type="submit" value="Opret global admin" />
            </div>
        </div>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#add-admin").submit(function (event) {
                event.preventDefault();

                $.ajax({
                    type: "POST",
                    url: "/api/globaladmin",
                    data: {
                        "Name": $("#global-admin-name").val(),
                        "Email": $("#global-admin-email").val()
                    }
                }).fail(function (result) {
                    show_message("Kunne ikke oprette brugeren");
                }).done(function (result) {
                    var user = result;

                    show_message("Brugeren " + user.Name + " er oprettet i systemet med ID " + user.Id);

                });
            });
        });
    </script>
}