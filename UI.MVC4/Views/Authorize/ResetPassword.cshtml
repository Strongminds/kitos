@model UI.MVC4.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Nulstil password";
}

<h2>Nulstil password</h2>
<br />
@if (Model.Retry)
{
    <text>
        Noget gik galt under opsætningen af det nye password. Dit password er ikke blevet ændret og du kan prøve igen. <br/><br/>
    </text> 
}

@if (Model.Hash == null)
{
    <text>
        Din anmodning om at nulstille dit password kunne ikke findes. Den kan være udløbet eller allerede brugt.
        Gå til @Html.ActionLink("glemt password?", "ForgotPassword") og prøv igen.        
    </text>
}
else
{
    <text>
        Indtast et nyt password til brugeren tilknyttet @Model.Email
        <br /><br/>
    
        @using (Html.BeginForm("ResetPassword", "Authorize"))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Hash)

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)

            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword)

            <input type="submit" value="Sæt nyt password" />
        }

    </text>
}
    