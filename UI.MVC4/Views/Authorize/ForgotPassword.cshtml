@model UI.MVC4.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Glemt password?";
}

<h2>Glemt password?</h2>

@ViewBag.Message
<br/>

Indtast din email-addresse for at få tilsendt en email med et link til at nulstille dit password.
<br/><br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)

    <input type="submit" value="Nulstil password"/>
}
