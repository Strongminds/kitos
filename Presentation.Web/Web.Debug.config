<?xml version="1.0"?>

<!-- For more information on using Web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <!--
    In the example below, the "SetAttributes" transform will change the value of
    "connectionString" to use "ReleaseSQLServer" only when the "Match" locator
    finds an atrribute "name" that has a value of "MyDB".
  -->
  <connectionStrings>
    <add name="KitosContext"
      connectionString="Server=localhost;Database=kitos;Uid=Kitos;Pwd=Kit65po#;Convert Zero Datetime=True;"
      xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
  </connectionStrings>
  <location>
    <system.web>
    </system.web>
  </location>
  <system.net>
    <mailSettings xdt:Transform="Replace">
      <smtp from="noreply@roskilde.dk" deliveryMethod="Network">
        <!--
          defaultCredentials="false" sendes mails as anonymous
          enableSsl="false" disables TSL
          Both of these are required
        -->
        <network host="10.80.1.201" defaultCredentials="false" enableSsl="false" />
      </smtp>
    </mailSettings>
  </system.net>
  <applicationSettings>
    <Presentation.Web.Properties.Settings>
      <setting name="BaseUrl" serializeAs="String" xdt:Transform="Replace" xdt:Locator="Match(name)">
        <value>https://kitos.roskilde.dk/</value>
      </setting>
      <setting name="MailSuffix" serializeAs="String" xdt:Transform="Replace" xdt:Locator="Match(name)">
        <value>(i testmiljøet)</value>
      </setting>
      <setting name="Environment" serializeAs="String" xdt:Transform="Replace" xdt:Locator="Match(name)">
        <value>Test</value>
      </setting>
    </Presentation.Web.Properties.Settings>
  </applicationSettings>
</configuration>
