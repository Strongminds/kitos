@using Microsoft.VisualStudio.Web.PageInspector.Runtime
<!DOCTYPE html>
<html lang="en" data-ng-app="app">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=EDGE" />
    <meta charset="utf-8" />
    <title data-ng-bind="page.title + ' - KITOS'">KITOS</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/cssbundle")
    @if (ViewBag.Environment != "Prod")
    {
        <style>
            .navbar .navbar-inverse .navbar-static-top {
                background-color: red !important;
            }
        </style>
    }
</head>
<body data-ng-cloak>
    <div data-notify></div>
    <div id="page-wrapper" class="container-fluid">
        <!-- NAVBAR
            ================================================== -->
        <div data-ng-include="'partials/topnav/topnav.html'"></div>

        <div id="page-content" role="main">

            <div id="subnav" data-ng-include="'partials/subnav/subnav.html'"></div>

            <div id="page-body" data-ui-view="" data-autoscroll="false" data-ng-cloak>
            </div>

            @{/* this doesn't really do anything, but it's necessary to shut up the interpreter */}
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/Scripts/jquery")
    @Scripts.Render("~/Scripts/libraries")
    @Scripts.Render("~/Scripts/angular")
    @Scripts.Render("~/Scripts/appbundle")
</body>
</html>
